{
  "name": "@sophistree/web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "connect-db-local": "psql -h localhost -p 5432 -U sophistree -d sophistree",
    "dev": "npm run prisma:generate && NODE_OPTIONS=--inspect next dev",
    "build": "next build",
    "start": "next start",
    "check-all": "time (npm run type-check && npm run lint && npm run format-check && npm test) || { echo 'Checks failed'; exit 1; }",
    "format-fix": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "next lint",
    "lint-fix": "next lint --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-debug": "node --inspect-brk ../../node_modules/jest/bin/jest.js --runInBand --watch",
    "type-check": "npm run prisma:generate && tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.693.0",
    "@prisma/client": "^5.0.0",
    "@reduxjs/toolkit": "^2.3.0",
    "@sophistree/graph-view": "file:../graph-view",
    "deep-equal": "^2.2.3",
    "express": "^4.18.2",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-art": "^18.3.1",
    "react-dom": "^18.2.0",
    "react-native-paper": "^5.0.0",
    "react-native-vector-icons": "^10.2.0",
    "react-native-web": "^0.19.0",
    "react-redux": "^9.1.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.9",
    "@swc/jest": "^0.2.37",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "^5.0.0",
    "typescript": "^5.0.0",
    "web-worker": "^1.3.0"
  }
}
