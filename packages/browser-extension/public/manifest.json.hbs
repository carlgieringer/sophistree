{
  "manifest_version": 3,
  "name": "Sophistree{{#unless prod}} (Dev){{/unless}}",
  "version": "{{version}}",
  "description": "A browser extension for mapping arguments appearing in web pages",
  "permissions": [
    "contextMenus",{{#unless prod}}
    "management",{{/unless}}
    "scripting",
    "sidePanel",
    "webNavigation"
  ],
  "action": {
    "default_title": "Sophistree{{#unless prod}} (Dev){{/unless}}"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "32": "logo-32.png",
    "512": "logo-512.png"
  }
}
